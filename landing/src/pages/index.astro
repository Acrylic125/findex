---
import "../styles/global.css";

const MESSAGE_TEMPLATES = [
  {
    title: "Disgruntled Student",
    lines: [
      "looking to swap ML4",
      "have: 84003 Mon 10.30-12.20",
      "want: 84001-84004",
    ],
  },
  {
    title: "Sleep-Deprived Year 2",
    lines: [
      "need later labs pls",
      "have: CS1231 Tue 08.30",
      "want: any after 14.00",
    ],
  },
  {
    title: "Last-Minute Planner",
    lines: [
      "switching out of 8am lec",
      "have: GER1000 Mon 08.00",
      "want: Tue / Wed slots",
    ],
  },
  {
    title: "Exchange Kid",
    lines: [
      "clashes with travel plans",
      "have: MA1521 Thu 16.00",
      "want: Mon / Tue slots",
    ],
  },
  {
    title: "CC Lover",
    lines: [
      "prioritising CCA nights",
      "have: tutorial Fri 19.00",
      "want: any weekday daytime",
    ],
  },
];

const LANE_COUNT = 3;
const CARDS_PER_LANE = 8;

const lanes = Array.from({ length: LANE_COUNT }, () =>
  Array.from({ length: CARDS_PER_LANE }, () => {
    const index = Math.floor(Math.random() * MESSAGE_TEMPLATES.length);
    return MESSAGE_TEMPLATES[index];
  })
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white">
    <main class="flex flex-col items-center">
      <div class="relative w-full flex flex-row max-w-7xl">
        <!-- Animated background conveyors -->
        <div class="pointer-events-none absolute inset-0 overflow-hidden">
          <div class="relative w-full h-full">
            <div
              class="conveyor-wrapper absolute inset-0 flex flex-col justify-center gap-4"
            >
              {
                lanes.map((lane, laneIndex) => (
                  <div class="conveyor-lane w-full" aria-hidden="true">
                    <div
                      class="conveyor-track flex gap-4"
                      style={`animation-delay: -${laneIndex * 4}s;`}
                    >
                      {lane.concat(lane).map((message, cardIndex) => (
                        <div
                          class="flex flex-col gap-1 text-xs sm:text-sm p-2 sm:p-3 border border-gray-700 rounded-md bg-gray-900/90 min-w-[220px] shadow-lg shadow-black/40"
                          data-lane={laneIndex}
                          data-card={cardIndex}
                        >
                          <span class="text-primary font-medium">
                            {message.title}
                          </span>
                          <div class="flex flex-col text-gray-200">
                            {message.lines.map((line) => (
                              <span>{line}</span>
                            ))}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                ))
              }
            </div>
            <div
              class="absolute inset-0 bg-linear-to-b from-gray-900/0 via-gray-900/0 to-gray-900"
            >
            </div>
          </div>
        </div>

        <!-- Header area -->
        <div
          class="z-10 w-full flex flex-col gap-4 md:gap-6 lg:gap-8 py-8 md:py-12 px-8 md:px-12 lg:px-16"
        >
          <div class="w-full flex flex-col gap-4">
            <div
              class="w-fit flex flex-row items-center gap-2 rounded-xl bg-primary/15 px-2.5 py-1.5 md:px-4 md:py-2.5 border border-gray-700"
            >
              <div class="size-4 md:size-6">
                <svg
                  width="100%"
                  height="100%"
                  viewBox="0 0 128 128"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <circle cx="96.5" cy="97.5" r="17.5" fill="#00A4E8"></circle>
                  <circle
                    cx="110"
                    cy="65"
                    r="13"
                    fill="#00A4E8"
                    fill-opacity="0.75"></circle>
                  <ellipse
                    cx="97"
                    cy="40.5"
                    rx="9"
                    ry="8.5"
                    fill="#00A4E8"
                    fill-opacity="0.5"></ellipse>
                  <circle
                    cx="79.5"
                    cy="27.5"
                    r="6.5"
                    fill="#00A4E8"
                    fill-opacity="0.5"></circle>
                  <ellipse
                    cx="64"
                    cy="27.5"
                    rx="4"
                    ry="4.5"
                    fill="#00A4E8"
                    fill-opacity="0.5"></ellipse>
                  <circle
                    cx="64"
                    cy="102"
                    r="4"
                    fill="#00A4E8"
                    fill-opacity="0.5"></circle>
                  <circle
                    cx="48.5"
                    cy="100.5"
                    r="6.5"
                    fill="#00A4E8"
                    fill-opacity="0.5"></circle>
                  <circle
                    cx="31"
                    cy="89"
                    r="9"
                    fill="#00A4E8"
                    fill-opacity="0.5"></circle>
                  <circle
                    cx="18"
                    cy="65"
                    r="13"
                    fill="#00A4E8"
                    fill-opacity="0.75"></circle>
                  <circle cx="31.5" cy="31.5" r="17.5" fill="#00A4E8"></circle>
                </svg>
              </div>

              <p class="font-medium text-xs md:text-sm text-primary">FIndex</p>
            </div>
            <h1 class="font-bold text-5xl md:text-6xl lg:text-7xl">
              INDEX<br />SWAPPING<br /><span class="text-primary">SUCKS</span>
            </h1>
          </div>

          <button
            class="w-fit bg-primary text-black uppercase font-bold px-4 py-2 rounded-lg hover:bg-primary/80 transition-all duration-300"
          >
            Use FIndex
          </button>
          <div class="h-20"></div>
        </div>
      </div>
    </main>
  </body>
</html>
