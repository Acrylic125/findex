---
import "../styles/global.css";

const MESSAGE_TEMPLATES = [
  {
    title: "Disgruntled Student",
    lines: [
      "looking to swap ML4",
      "have: 84003 Mon 10.30-12.20",
      "want: 84001-84004",
    ],
  },
  {
    title: "Sleep-Deprived Year 2",
    lines: [
      "need later labs pls",
      "have: CS1231 Tue 08.30",
      "want: any after 14.00",
    ],
  },
  {
    title: "Last-Minute Planner",
    lines: [
      "switching out of 8am lec",
      "have: GER1000 Mon 08.00",
      "want: Tue / Wed slots",
    ],
  },
  {
    title: "Exchange Kid",
    lines: [
      "clashes with travel plans",
      "have: MA1521 Thu 16.00",
      "want: Mon / Tue slots",
    ],
  },
  {
    title: "CC Lover",
    lines: [
      "prioritising CCA nights",
      "have: tutorial Fri 19.00",
      "want: any weekday daytime",
    ],
  },
];

const LANE_COUNT = 3;
const CARDS_PER_LANE = 8;

const lanes = Array.from({ length: LANE_COUNT }, () =>
  Array.from({ length: CARDS_PER_LANE }, () => {
    const index = Math.floor(Math.random() * MESSAGE_TEMPLATES.length);
    return MESSAGE_TEMPLATES[index];
  })
);
